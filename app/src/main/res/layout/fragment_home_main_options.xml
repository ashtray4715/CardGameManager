<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/text_view_start_new_game"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="16dp"
            android:text="Start new game"
            android:textColor="#000000"
            android:textSize="20sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:ignore="HardcodedText" />

        <LinearLayout
            android:id="@+id/main_options_first_row"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            android:baselineAligned="false"
            android:orientation="horizontal"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/text_view_start_new_game">

            <com.ashtray.card.game.manager.common.ui.custom.VerticalMenuItem
                android:id="@+id/hazari"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="8dp"
                android:layout_weight="1"
                app:vmi_image="@drawable/test2"
                app:vmi_text="Hazari" />

            <com.ashtray.card.game.manager.common.ui.custom.VerticalMenuItem
                android:id="@+id/hearts"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="8dp"
                android:layout_weight="1"
                app:vmi_image="@drawable/test2"
                app:vmi_text="Hearts" />

            <com.ashtray.card.game.manager.common.ui.custom.VerticalMenuItem
                android:id="@+id/nine_card"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="8dp"
                android:layout_weight="1"
                app:vmi_image="@drawable/test2"
                app:vmi_text="9 Card" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/main_option_second_row"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="8dp"
            android:layout_marginBottom="16dp"
            android:baselineAligned="false"
            android:orientation="horizontal"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/main_options_first_row">

            <com.ashtray.card.game.manager.common.ui.custom.VerticalMenuItem
                android:id="@+id/twenty_nine"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="8dp"
                android:layout_weight="1"
                app:vmi_image="@drawable/test2"
                app:vmi_text="29" />

            <com.ashtray.card.game.manager.common.ui.custom.VerticalMenuItem
                android:id="@+id/spades"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="8dp"
                android:layout_weight="1"
                app:vmi_image="@drawable/test2"
                app:vmi_text="Spades" />

            <com.ashtray.card.game.manager.common.ui.custom.VerticalMenuItem
                android:id="@+id/bici_kata"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="8dp"
                android:layout_weight="1"
                app:vmi_image="@drawable/test2"
                app:vmi_text="Bici kata" />

        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>